#:kivy 1.10.1

<ForgotPasswordScreen>:
    email_input: _email_input

	BoxLayout:
		orientation: 'vertical'
        BoxLayout:
			size_hint_y: .4
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .3
            Label:
                text: "[b][i]Forgot Password?[/b][/i]"
                markup: True
			Label:
                text: '[b]We will send you a link to reset your password[/b]'
                markup: True
			TextInput:
				id: _email_input
				hint_text: 'Email Address'
				multiline: False
				focus: True
        BoxLayout:
            size_hint_y: .1
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .2
            Button:
				text: '[b]Send Email[/b]'
				markup: True
				on_release: root.submit()
			Button:
				text: '[b]Back[/b]'
				markup: True
				on_release: root.manager.current = 'login'
