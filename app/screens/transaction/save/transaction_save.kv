#:kivy 1.10.1
#: import AppActionBar uix.actionbars.app.AppActionBar
#: import DatePicker uix.widgets.date_picker.DatePicker
#: import SelectButton uix.widgets.select_button.SelectButton
#: import NumericInput uix.widgets.numeric_input.NumericInput


<TransactionSaveScreen>:
    amount_input: _amount_input
    comment_input: _comment_input
    category_selector: _category_selector
    date_picker: _date_picker
    BoxLayout:
        orientation: 'vertical'
        AppActionBar:
            screen_manager: root.manager
        BoxLayout:
            size_hint_y: .8
            orientation: 'vertical'
            Label:
                text: root.screen_title
                markup: True
            NumericInput:
                id: _amount_input
                multiline: False
                hint_text: "Amount"
                input_type: 'number'
            TextInput:
                id: _comment_input
                multiline: False
                hint_text: "Comment"
            Label:
                text: '[b]Select Category[/b]'
                markup: True
            SelectButton:
                id: _category_selector
                text: "None Selected"
                attr_name: 'history'
                allow_null: False
            Label:
                text: '[b]Set Process Time[/b]'
                markup: True
            DatePicker:
			    id: _date_picker
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .2
            Button:
                text: root.submit_btn_text
                markup: True
                on_release: root.submit()
            Button:
                text: '[b]Cancel[/b]'
                markup: True
                on_release: root.manager.switch_back()
