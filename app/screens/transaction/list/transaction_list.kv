#:kivy 2.0.0
#:import AppActionBar uix.actionbars.app.AppActionBar
#:import TransactionFilter uix.widgets.transaction_filter.TransactionFilter


<TransactionListScreen>:
	filter: _filter
	list: _list
	BoxLayout:
		orientation: 'vertical'
		AppActionBar:
			screen_manager: root.manager
		TransactionFilter:
			id: _filter
			size_hint_y: .1
		BoxLayout:
			size_hint_y: .6
			ScrollView:
				do_scroll_x: False
				size: self.size
				StackLayout:
					id: _list
					size_hint_y: None
					spacing: 5
		BoxLayout:
			orientation: 'vertical'
			size_hint_y: .3
			Button:
				text: '[b]List[/b]'
				markup: True
				on_release: root.list_transactions()
			Button:
				text: '[b]New Transaction[/b]'
				markup: True
				on_release: root.manager.current = 'transaction_create'
			Button:
				text: '[b]Back to Main Menu[/b]'
				markup: True
				on_release: root.manager.current = 'main'
