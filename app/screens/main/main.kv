#:kivy 1.10.1
#: import AppActionBar uix.actionbars.app.AppActionBar


<MainScreen>:
	BoxLayout:
		orientation: 'vertical'
		AppActionBar:
			screen_manager: root.manager
		BoxLayout:
			size_hint_y: .6
		BoxLayout:
			orientation: 'vertical'
			size_hint_y: .4
			Button:
				text: '[b]Manage Categories[/b]'
				markup: True
				on_release: root.manager.current = 'category_list'
			Button:
				text: '[b]Manage Transactions[/b]'
				markup: True
				on_release: root.manager.current = 'transaction_list'
			Button:
				text: '[b][u]Add New Transaction[/u][/b]'
				markup: True
				on_release: root.manager.current = 'transaction_create'
			Button:
				text: '[b][i]See Statistics[/i][/b]'
				markup: True
				on_release: root.manager.current = 'statistics'
