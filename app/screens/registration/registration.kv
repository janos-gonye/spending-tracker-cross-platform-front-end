#:kivy 2.0.0
#: import PasswordInput uix.widgets.password_input.PasswordInput


<RegistrationScreen>:
	email_input: _email_input
	password_input: _password_input

	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			size_hint_y: .25
		BoxLayout:
			orientation: 'vertical'
			size_hint_y: .4
			TextInput:
				id: _email_input
				size_hint_y: .25
				hint_text: 'Email Address'
				multiline: False
				focus: True
			PasswordInput:
				id: _password_input
				size_hint_y: .5
			Button:
				size_hint_y: .25
				text: '[b][u]Registrate[/u][/b]'
				markup: True
				on_release: root.registrate(_email_input.text, _password_input.password)
		BoxLayout:
			size_hint_y: .15
			Label:
				text: "[i][color=ff0000]Go back[/color] to log in[/i]"
				halign: 'center'
				markup: True
		BoxLayout:
			size_hint_y: .1
			Button:
				text: '[b]Back[/b]'
				markup: True
				on_release: root.manager.current = 'login'
