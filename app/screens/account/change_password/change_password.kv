#:kivy 1.10.1
#:import AppActionBar uix.actionbars.app.AppActionBar
#:import PasswordInput uix.widgets.password_input.PasswordInput

<ChangePasswordScreen>:
    new_password_input: _new_password_input
    old_password_input: _old_password_input
	BoxLayout:
		orientation: 'vertical'
		AppActionBar:
			screen_manager: root.manager
        BoxLayout:
            size_hint_y: .4
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: '[b]Change Your Password[/b]'
                markup: True
                size_hint_y: 1/6
            TextInput:
                id: _old_password_input
                hint_text: 'Current Password'
                multiline: False
                password: True
                size_hint_y: 1/6
            PasswordInput:
                id: _new_password_input
                size_hint_y: 2/6
			Button:
				text: '[b]Save[/b]'
				markup: True
				on_release: root.change_password()
                size_hint_y: 1/6
            Button:
                text: '[b]Back to account[/b]'
                markup: True
                on_release: root.manager.current = 'account'
                size_hint_y: 1/6
