#:kivy 1.10.1
#:import AppActionBar uix.actionbars.app.AppActionBar
#:import PasswordInput uix.widgets.password_input.PasswordInput

<ChangePasswordScreen>:
    password_input: _password_input
	BoxLayout:
		orientation: 'vertical'
		AppActionBar:
			screen_manager: root.manager
        BoxLayout:
            size_hint_y: .5
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: '[b]Change Your Password[/b]'
                markup: True
                size_hint_y: .2
            PasswordInput:
                id: _password_input
                size_hint_y: .4
			Button:
				text: '[b]Save[/b]'
				markup: True
				on_release: root.change_password(_password_input.password)
                size_hint_y: .2
            Button:
                text: '[b]Back to account[/b]'
                markup: True
                on_release: root.manager.current = 'account'
                size_hint_y: .2
