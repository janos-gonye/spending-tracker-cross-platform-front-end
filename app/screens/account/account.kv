#:kivy 2.0.0
#:import AppActionBar uix.actionbars.app.AppActionBar


<AccountScreen>:
	BoxLayout:
		orientation: 'vertical'
		AppActionBar:
			screen_manager: root.manager
		BoxLayout:
			size_hint_y: .7
		BoxLayout:
			orientation: 'vertical'
			size_hint_y: .3
			Button:
				text: '[b]Change Password[/b]'
				markup: True
				on_release: root.manager.current = 'change_password'
			Button:
				text: '[b][color=ff0000]Delete Account[/color][/b]'
				markup: True
				on_release: root.delete_account()
			Button:
				text: '[b]Back to Main Menu[/b]'
				markup: True
				on_release: root.manager.current = 'main'
