#:kivy 1.10.1
#:import AppActionBar uix.actionbars.app.AppActionBar
#:import DatePicker uix.widgets.date_picker.DatePicker


<StatisticsScreen>:
	from_selector: _from_selector
	to_selector: _to_selector
	list: _list
	BoxLayout:
		orientation: 'vertical'
		AppActionBar:
			screen_manager: root.manager
		BoxLayout:
			size_hint_y: .1
			orientation: 'horizontal'
			BoxLayout:
				size_hint_x: .618
				orientation: 'vertical'
				DatePicker:
					id: _from_selector
				DatePicker:
					id: _to_selector
			BoxLayout:
				size_hint_x: .382
		BoxLayout:
			size_hint_y: .6
			ScrollView:
				do_scroll_x: False
				size: self.size
				StackLayout:
					id: _list
					size_hint_y: None
					spacing: 5
		BoxLayout:
			orientation: 'vertical'
			size_hint_y: .3
			Button:
				text: '[b]See Statistics[/b]'
				markup: True
				on_release: root.list_statistics()
			Button:
				text: '[b]Send Statistics in Email[/b]'
				markup: True
				on_release: root.export_statistics()
			Button:
				text: '[b]Back to Main Menu[/b]'
				markup: True
				on_release: root.manager.current = 'main'
