#:kivy 1.10.1
#: import AppActionBar uix.actionbars.app.AppActionBar
#: import SelectButton uix.widgets.select_button.SelectButton


<CategoryMergeScreen>:
    cat_subject: _cat_subject
    cat_target: _cat_target
    remove_merged_checkbox: _remove_merged_checkbox
	BoxLayout:
		orientation: 'vertical'
		AppActionBar:
			screen_manager: root.manager
        BoxLayout:
            size_hint_y: .2
        BoxLayout:
            size_hint_y: .5
            orientation: 'vertical'
            Label:
                text: '[b]Merge the following category[/b]'
                markup: True
            SelectButton:
                id: _cat_subject
                text: "None Selected"
                attr_name: 'history'
                allow_null: False
                null_text: "None Selected"
            Label:
                text: '[b]into category[/b]'
                markup: True
            SelectButton:
                id: _cat_target
                text: "None Selected"
                attr_name: 'history'
                allow_null: True
                null_text: "None Selected"
            BoxLayout:
                CheckBox:
                    id: _remove_merged_checkbox
                    size_hint_x: 0.382
                Label:
                    text: "[b]Remove merged category\n(only if category has no subcategories)[/b]"
                    markup: True
                    size_hint_x: 0.618
        BoxLayout:
            size_hint_y: .1
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .2
            Button:
                text: '[b]Merge[/b]'
                markup: True
                on_release: root.merge()
            Button:
                text: '[b]Back to Category List[/b]'
                markup: True
                on_release: root.manager.current = 'category_list'
