#:kivy 1.10.1
#: import AppActionBar uix.actionbars.app.AppActionBar
#: import SelectButton uix.widgets.select_button.SelectButton


<CategoryMergeScreen>:
    cat_subject_select: _cat_subject_select
    cat_target_select: _cat_target_select
	BoxLayout:
		orientation: 'vertical'
		AppActionBar:
			screen_manager: root.manager
        BoxLayout:
            size_hint_y: .3
        BoxLayout:
            size_hint_y: .4
            orientation: 'vertical'
            Label:
                text: '[b]Merge the following category[/b]'
                markup: True
            SelectButton:
                id: _cat_subject_select
                text: "None Selected"
                attr_name: 'history'
                allow_null: False
                null_text: "None Selected"
            Label:
                text: '[b]into category[/b]'
                markup: True
            SelectButton:
                id: _cat_target_select
                text: "None Selected"
                attr_name: 'history'
                allow_null: True
                null_text: "None Selected"
        BoxLayout:
            size_hint_y: .1
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .2
            Button:
                text: '[b]Merge[/b]'
                markup: True
                on_release: root.merge()
            Button:
                text: '[b]Back to Category List[/b]'
                markup: True
                on_release: root.manager.current = 'category_list'
