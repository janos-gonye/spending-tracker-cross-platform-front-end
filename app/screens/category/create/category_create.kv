#:kivy 1.10.1
#: import AppActionBar uix.actionbars.app.AppActionBar
#: import SelectButton uix.widgets.select_button.SelectButton


<CategoryCreateScreen>:
    title_input: _title_input
    description_input: _description_input
    select: _select
	BoxLayout:
		orientation: 'vertical'
		AppActionBar:
			screen_manager: root.manager
        BoxLayout:
            size_hint_y: .4
            orientation: 'vertical'
            Label:
                text: '[b]Create New Category[/b]'
                markup: True
            TextInput:
                id: _title_input
                multiline: False
                hint_text: 'Title'
            TextInput:
                id: _description_input
                hint_text: 'Description'
            SelectButton:
                id: _select
                text: "Select Parent Category"
                attr_name: 'history'
        BoxLayout:
            size_hint_y: .4
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: .2
            Button:
                text: '[b]Create[/b]'
                markup: True
            Button:
                text: '[b]Cancel[/b]'
                markup: True
                on_release: root.manager.current = 'category'
