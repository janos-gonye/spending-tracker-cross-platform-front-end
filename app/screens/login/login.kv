#:kivy 1.10.1


<LoginScreen>:

	BoxLayout:
		orientation: 'vertical'
		padding: 
		BoxLayout:
			size_hint_y: .25
		BoxLayout:
			orientation: 'vertical'
			size_hint_y: .4
			TextInput:
				id: _email_input
				hint_text: 'Email Address'
				multiline: False
				focus: True
			TextInput:
				id: _password_input
				hint_text: 'Password'
				multiline: False
				password: True
			Button:
				text: '[b]Login[/b]'
				markup: True
				on_release: root.login(_email_input.text, _password_input.text)
			Label:
				text: "[i]If you don't have an account\n[color=ff0000]click below[/color] to registrate[/i]"
				halign: 'center'
				markup: True
		BoxLayout:
			size_hint_y: .1
		BoxLayout:
			size_hint_y: .15
			Button:
				text: '[b][u]Create Account[/u][/b]'
				markup: True
