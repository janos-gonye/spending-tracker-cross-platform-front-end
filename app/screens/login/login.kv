#:kivy 1.10.1


<LoginScreen>:
	email_input: _email_input
	password_input: _password_input

	BoxLayout:
		orientation: 'vertical'
		spacing: 50
		BoxLayout:
			size_hint_y: .25
		BoxLayout:
			orientation: 'vertical'
			size_hint_y: .4
			TextInput:
				id: _email_input
				hint_text: 'Email Address'
				multiline: False
			TextInput:
				id: _password_input
				hint_text: 'Password'
				multiline: False
				password: True
			Button:
				text: '[b]Login[/b]'
				markup: True
			Label:
				text: "[i]If you don't have an account\nclick below to registrate[/i]"
				halign: 'center'
				markup: True
		BoxLayout:
			size_hint_y: .1
		BoxLayout:
			size_hint_y: .15
			Button:
				text: '[b][u]Create Account[/u][/b]'
				markup: True