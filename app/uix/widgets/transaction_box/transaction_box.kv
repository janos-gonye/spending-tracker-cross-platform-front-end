#:kivy 2.0.0


<TransactionBox>:
	category: _category
	comment: _comment
	date: _date
	amount: _amount
	remove_btn: _remove_btn
	update_btn: _update_btn
	size_hint_y: None
	height: 100
	Button:
		id: _update_btn
		size_hint_x: .3
		text: '[b][i]Update[/i][/b]'
		markup: True
	BoxLayout:
		size_hint_x: .4
		BoxLayout:
			orientation: 'vertical'
			Label:
				id: _category
				markup: True
			Label:
				id: _comment
				markup: True
			BoxLayout:
				orientation: 'horizontal'
				Label:
					id: _date
					size_hint_x: .5
					markup: True
				Label:
					id: _amount
					size_hint_x: .5
					markup: True
	Button:
		id: _remove_btn
		size_hint_x: .3
		text: '[b][i]Remove[/i][/b]'
		markup: True
