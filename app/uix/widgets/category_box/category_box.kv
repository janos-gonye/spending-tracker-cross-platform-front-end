#:kivy 1.10.1


<CategoryBox>:
	title: _title
	description: _description
	remove_btn: _remove_btn
	update_btn: _update_btn
	size_hint_y: None
	height: 100
	Button:
		id: _update_btn
		size_hint_x: .3
		text: '[b][i]Update[/i][/b]'
		markup: True
	BoxLayout:
		size_hint_x: .4
		BoxLayout:
			orientation: 'vertical'
			Label:
				id: _title
				halign: 'left'
				valign: 'middle'
				markup: True
			Label:
				id: _description
				halign: 'left'
				valign: 'middle'
				markup: True
	Button:
		id: _remove_btn
		size_hint_x: .3
		text: '[b][i]Remove[/i][/b]'
		markup: True
